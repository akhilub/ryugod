package main

import "fmt"

func main() {
    i := 1

    for i <= 4 {
        fmt.Println(i)
        i = i + 1
    }

    for j := 5; j < 8; j++ {
        fmt.Println(j)
    }

    for {
        fmt.Println("Exit the for statement")
        break
    }

    for n := 0; n < 3; n++ {
        if n%2 == 0 {
            continue
        }
        fmt.Println(n)
    }
}
