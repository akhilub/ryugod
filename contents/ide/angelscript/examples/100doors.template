/*
    AngelScript: 100 doors
    http://angelcode.com/
*/

int main()
{
    int square = 1, increment = 3, door;

    for (door = 1; door <= 100; ++door)
    {
        print("door #" + door);
        if (door == square)
        {
            print(" is open.\n");
            square += increment;
            increment += 2;
        }
        else
            print(" is closed.\n");
    }
    return 0;
}